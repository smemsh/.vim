### LIBS #####################################################################

# this has all kinds of stuff, right now seems used only by IndentTab
#
[submodule "bundle/ingo-library"]
	path = pack/bundle/start/ingo-library
	url = http://github.com/vim-scripts/ingo-library

### LANG #####################################################################

# todo: this does not seem to work
# the plugin in the bundle dir does not seem to activate
# should give command: ":compiler clang"
#
[submodule "bundle/clang"]
	path = pack/bundle/start/clang
	url = https://github.com/vim-scripts/clang.git

# todo: obsoleted by YouCompleteMe?
# todo: is this same: http://github.com/Rip-Rip/clang_complete
#
[submodule "bundle/clang-complete"]
	path = pack/bundle/start/clang-complete
	url = https://github.com/vim-scripts/clang-complete.git
	ignore = untracked

# bunch of bundled upstream repos for individual lang/syntax/hi for many
# languages -- "one to rule them all"
#
[submodule "bundle/vim-polyglot"]
	path = pack/bundle/start/vim-polyglot
	url = https://github.com/sheerun/vim-polyglot

# translate vim buffer xml <--> yaml and reverse
[submodule "bundle/vimxy"]
	path = pack/bundle/start/vimxy
	url = https://github.com/ericcong/vimxy

### EDITING ##################################################################

# columnar alignment based on regexes, with helpful default maps
#
[submodule "bundle/vim-easy-align"]
	path = pack/bundle/start/vim-easy-align
	url = https://github.com/junegunn/vim-easy-align.git

# leading shifts (for indent level) use tabs, later ones
# (for alignment) will use spaces
#
[submodule "bundle/IndentTab"]
	path = pack/bundle/start/IndentTab
	url = http://github.com/vim-scripts/IndentTab

# enables drawing ansi / ascii line art boxes, tables, etc
#
[submodule "bundle/DrawIt"]
	path = pack/bundle/start/DrawIt
	url = https://github.com/vim-scripts/DrawIt

### SCM ######################################################################

# establishes windows and keys to compare multiple directory trees and
# select which to present in diffmode or make wholesale file selection
# (assists doing manual tree merges prior to mergetool usage)
#
[submodule "bundle/vim-dirdiff"]
	path = pack/bundle/start/vim-dirdiff
	url = https://github.com/will133/vim-dirdiff

### VIM ######################################################################

# shows a trace of syntax highlighting stack, useful for debugging
# colorss
#
[submodule "bundle/vim-hilinks"]
	path = pack/bundle/start/vim-hilinks
	url = https://github.com/kergoth/vim-hilinks

# converts gui-only colorss to have cterms (realtime or statically)
# note: not enabled by default in plugrc/csapprox
#
[submodule "bundle/csapprox"]
	path = pack/bundle/start/csapprox
	url = https://github.com/godlygeek/csapprox

# configurable balanced-colorize for each nested level of parens
#
[submodule "bundle/rainbow"]
	path = pack/bundle/start/rainbow
	url = http://github.com/luochen1990/rainbow

# gives vim enhanced (colors, keys, features) buf list and selection
#
[submodule "bundle/bufexplorer"]
	path = pack/bundle/start/bufexplorer
	url = http://github.com/jlanzarotta/bufexplorer

# conceal embedded ansi escape sequences in the file being edited and
# duplicate intended colorization in viml over the intended region
#
[submodule "bundle/vim-plugin-AnsiEsc"]
	path = pack/bundle/start/vim-plugin-AnsiEsc
	url = https://github.com/powerman/vim-plugin-AnsiEsc

# needed for vimdeck to do syntax highlighting of code blocks
#
[submodule "bundle/SyntaxRange"]
	path = pack/bundle/start/SyntaxRange
	url = https://github.com/vim-scripts/SyntaxRange

