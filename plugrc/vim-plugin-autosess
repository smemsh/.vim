"

" keep the autosessions with all our other vimdirs
"
let g:autosess_dir = expand("~/var/vim/autosess")

" it won't exist on a fresh checkout, and we cannot do it during init, which
" occurs prior to plugin load, so g:autosess_dir will not yet be available
"
if ! isdirectory(g:autosess_dir)
	call mkdir(g:autosess_dir, "p")
endif
